{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@nuwa-ai/identity-kit/testHelpers": ["../identity-kit/src/testHelpers/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
} 