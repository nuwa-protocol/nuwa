.PHONY: build dev-server dev-client clean install

# Install dependencies
install:
	pnpm install

# Build the project
build:
	pnpm build

# Run development server
dev-server:
	pnpm dev:server

# Run development client
dev-client:
	pnpm dev:client

# Clean build artifacts
clean:
	pnpm clean

# Full rebuild
rebuild: clean build
