# MCP Server Proxy - Example Configuration (Single Upstream)

# Server settings
port: 8088
endpoint: "/mcp"

# Single upstream MCP server (optional - if not provided, only built-in tools will be available)
# upstreamUrl: "https://api.example.com/mcp?key=${API_KEY}"

# Payment & chain configuration (optional - if not provided, all tools will be free)
# serviceId: "my-mcp-service"
# serviceKey: "${SERVICE_KEY}"  # serialized StoredKey string
# network: "test"  # local | dev | test | main
# rpcUrl: "${ROOCH_RPC_URL}"
# defaultAssetId: "0x3::gas_coin::RGas"
# defaultPricePicoUSD: "1000000000000"  # 0.001 USD - Default price for all tools (custom and upstream)
# adminDid: ["did:rooch:0x..."]
# debug: false

# Tool pricing configuration (optional)
# Only configure pricing for upstream tools - tool definitions come from upstream server
# register:
#   tools:
#     - name: "example.tool"  # Must exist in upstream server
#       pricePicoUSD: "1000000000000"  # 0.001 USD, if not specified, uses defaultPricePicoUSD
#     - name: "free.tool"  # Must exist in upstream server
#       pricePicoUSD: "0"  # Free tool
#     - name: "default.price.tool"  # Must exist in upstream server
#       # No pricePicoUSD specified - uses defaultPricePicoUSD