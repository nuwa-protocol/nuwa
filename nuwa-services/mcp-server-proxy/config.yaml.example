# MCP Server Proxy - Example Configuration (Single Upstream)

# Server settings
port: 8088
endpoint: "/mcp"

# Single upstream MCP server (optional - if not provided, only built-in tools will be available)
# upstreamUrl: "https://api.example.com/mcp?key=${API_KEY}"

# Payment & chain configuration (optional - if not provided, all tools will be free)
# serviceId: "my-mcp-service"
# serviceKey: "${SERVICE_KEY}"  # serialized StoredKey string
# network: "test"  # local | dev | test | main
# rpcUrl: "${ROOCH_RPC_URL}"
# defaultAssetId: "0x3::gas_coin::RGas"
# defaultPricePicoUSD: "1000000000000"  # 0.001 USD
# adminDid: ["did:rooch:0x..."]
# debug: false

# Custom tools registration (optional)
register:
  tools:
    - name: "echo.free"
      description: "Echo text back"
      pricePicoUSD: "0"  # Free tool
      parameters:
        type: "object"
        properties:
          text:
            type: "string"
    - name: "calc.add"
      description: "Add two numbers"
      pricePicoUSD: "1000000000"  # 0.001 USD
      parameters:
        type: "object"
        properties:
          a:
            type: "number"
          b:
            type: "number"