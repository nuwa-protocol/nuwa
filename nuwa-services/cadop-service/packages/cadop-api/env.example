# Server Configuration
PORT=8080
NODE_ENV=development

CADOP_DID=did:rooch:placeholder
ROOCH_PRIVATE_KEY=roochsecretkeyplaceholder
JWT_SIGNING_KEY=signing-key-placeholder
CUSTODIAN_MAX_DAILY_MINTS=10
DID_SUBSIDY_ENABLED=true
# Raw on-chain integer amount (not decimal RGas value)
DID_SUBSIDY_AMOUNT_RAW=5000000000
DID_SUBSIDY_MAX_GAS=100000000

# Rooch Network Configuration
ROOCH_NETWORK_URL=https://test-seed.rooch.network
ROOCH_NETWORK_ID=test

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trust Proxy (set to 'true', 'false', number of hops, or specific proxy IP/subnet)
# Enable this when running behind a reverse proxy (nginx, AWS ALB, Cloudflare, etc.)
# - 'true': Trust all proxies
# - 'false': Don't trust any proxies (default, more secure)
# - '1', '2', etc.: Trust specific number of proxy hops
# - 'loopback', 'linklocal', 'uniquelocal': Trust specific network ranges
# - '192.168.1.1,10.0.0.0/8': Comma-separated IP addresses or CIDR blocks
TRUST_PROXY=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
