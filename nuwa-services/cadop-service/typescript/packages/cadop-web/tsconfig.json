{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client", "jest", "node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
} 